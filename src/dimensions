#!/usr/bin/env perl

open(my $input, '<', "dimensions.txt");
open(my $output, '>', "dimensions.hpp");

print $output <<'EOF';
// This file was generated by the 'dimensions' executable.

#include "dimval.hpp"

namespace num {
EOF

while(<$input>) {
   next if /^\s*$/;
   my($nam, $tim, $len, $mas, $chg, $tmp) = split;
   print $output "using $nam = dimval<$tim, $len, $mas, $chg, $tmp>;\n";
}

print $output <<'EOF';
}

EOF

